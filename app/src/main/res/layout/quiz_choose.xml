<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg_nameinput">

    <LinearLayout
        android:layout_width="318dp"
        android:layout_height="520dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250dp"
        android:gravity="center_vertical|center"
        android:minWidth="25px"
        android:minHeight="25px"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Choose either one to proceed."
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="normal|italic" />

        <Button
            android:id="@+id/cppquizbutton"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="C++ Quiz"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="247dp" />

        <Button
            android:id="@+id/javaquizbutton"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Java Quiz"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="247dp" />

        <Button
            android:id="@+id/normalquizbutton"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Logical IT Quiz"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="247dp" />

        <Button
            android:id="@+id/backbutton"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Back"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="247dp" />

    </LinearLayout>

</LinearLayout>